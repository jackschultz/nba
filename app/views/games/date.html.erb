<h1><%= @date %></h1>

<% @games.each do |game| %>
  <div class="row">
    <div class="col-md-6">
      <%= link_to "#{game.away_team.full_name} at #{game.home_team.full_name}", game %>
    </div>
  </div>
<% end %>

<% @lineups.each do |lineup| %>
  <div>
    Point Guard: <%= lineup.point_guard.player.full_name %>
  </div>
  <div>
    Shooting Guard: <%= lineup.shooting_guard.player.full_name %>
  </div>
  <div>
    Small Forward: <%= lineup.small_forward.player.full_name %>
  </div>
  <div>
    Power Forward: <%= lineup.power_forward.player.full_name %>
  </div>
  <div>
    Center: <%= lineup.center.player.full_name %>
  </div>
  <div>
    Guard: <%= lineup.guard.player.full_name %>
  </div>
  <div>
    Forward: <%= lineup.forward.player.full_name %>
  </div>
  <div>
    Utility: <%= lineup.utility.player.full_name %>
  </div>
  <div>
    Total Expected: <%= lineup.expected_points %>
  </div>
  <div>
    Total Actual DK: <%= lineup.actual_points_dk %>
  </div>
  <div>
    Total Salary: <%= lineup.current_cost %>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Team</th>
      <th>Position</th>
      <th>Expected Points</th>
      <th>Actual Points DK</th>
      <th>Salary</th>
    </tr>
  </thead>
  <tbody>
    <% @player_costs.each do |player_cost| %>
      <tr>
        <td><%= player_cost.player.full_name %></td>
        <td><%= player_cost.player.team.full_name %></td>
        <td><%= player_cost.position%></td>
        <td><%= number_with_precision(player_cost.expected_points, precision: 2) %></td>
        <td><%= player_cost.actual_points_dk %></td>
        <td><%= player_cost.salary %></td>
      </tr>
    <% end %>
  </tbody>
</table>
