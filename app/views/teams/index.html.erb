<div class="row">
  <div class="col-md-6">
    <h1>Listing teams</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <% Conference.all.each do |conference| %>
      <h1><%= conference.name %> Conference</h1>
      <% conference.divisions.each do |division| %>
        <h3><%= division.name %> Conference</h3>
        <% division.teams.each do |team| %>
          <div class="row">
            <div class="col-md-12">
              <td><%= link_to team.full_name, team %></td>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
